// 首页标题
.home-blog
  .hero
    z-index 1
    h1, .description, .action, .huawei
      color #333!important
      // text-shadow 2px 2px 1px #888

// 页面去背景
.page
  background var(--background-color)
  background #fff

// 时间轴
.timeline-wrapper
  .year
    background var(--background-color)
    background #fff
  .year-wrapper
    background var(--background-color)
    background #fff

// 评论
.vssue
  border-radius: $borderRadius
  background rgba(0, 0, 0, 0.05)
  .vssue-header
  .vssue-body
    .vssue-new-comment
      .vssue-comment-avatar
        img
          border-radius: $borderRadius
          box-shadow: $boxShadow
      .vssue-new-comment-body
        box-shadow: $boxShadow
        background: #f6f8fa
        .vssue-new-comment-input
          border-radius: $borderRadius
    .vssue-comments
      .vssue-comment
        .vssue-comment-avatar
          img
            border-radius: $borderRadius
            box-shadow: $boxShadow
        .vssue-comment-body
          box-shadow: $boxShadow
          .vssue-comment-header
            background: #f0f2f4
          .vssue-comment-main
            background: #f6f8fa
          .vssue-comment-footer
            background: #f0f2f4

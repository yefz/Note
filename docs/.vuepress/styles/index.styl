// 底纹背景
body {
  background-color: #f9f8f8 !important
  background-size 100%
  background-image url('/images/line_bg.svg')
  background-attachment fixed
  background-repeat no-repeat
  background-position 50%
}

// 首页标题
.home-blog
  .hero
    z-index 1
    h1, .description, .action, .huawei
      color #333 !important
      // text-shadow 2px 2px 1px #888
  .info-wrapper
    box-shadow none !important
    background $customColor !important
    &:hover
      box-shadow none !important
    .personal-info-wrapper
      padding-top 20px
      .name
        display none
      .num h3
        font-size 2em
        color #999
      .num > div:first-child
        border-right 1px solid transparent
    .category-wrapper .category-item
      box-shadow none !important

// 侧栏导航背景
.sidebar
  background-color $customColor !important

// 页面去背景
.page
  background transparent
  // 增加文章内容块宽度（740px => 830px）
  .page-title, 
  .content__default:not(.custom)
    max-width 830px !important
    background-color #fff
    box-shadow $boxShadow
  .page-title
    position relative
    margin-bottom 20px
    background-color transparent
    box-shadow none
    z-index 10
    > h1
      margin 5px 0
    > div
      position absolute
      top 34px
      right 0
      padding 0 10px
      background-color rgba(255, 255, 255, .8)
      display inline-block
    > hr
      display none

// 分页去背景
.pagation.pagation
  background transparent !important
  .pagation-list
    .jump:not(.bgprimary)
      background-color #fff;

// 时间轴
.timeline-wrapper
  .year
    font-size 32px
    background transparent
  .year-wrapper
    margin-top 10px
    background var(--background-color)
    background #fff
    li
      padding 10px !important
      .date::before
        top 21px !important

// 评论
.vssue
  border-radius $borderRadius
  background rgba(0, 0, 0, 0.05)
  .vssue-header
  .vssue-body
    .vssue-new-comment
      .vssue-comment-avatar
        img
          border-radius $borderRadius
          box-shadow $boxShadow
      .vssue-new-comment-body
        box-shadow $boxShadow
        background #f6f8fa
        .vssue-new-comment-input
          border-radius $borderRadius
    .vssue-comments
      .vssue-comment
        .vssue-comment-avatar
          img
            border-radius $borderRadius
            box-shadow $boxShadow
        .vssue-comment-body
          box-shadow $boxShadow
          .vssue-comment-header
            background #f0f2f4
          .vssue-comment-main
            background #f6f8fa
          .vssue-comment-footer
            background #f0f2f4

// 隐藏无用调色板与全屏
.reco-color
  display none
.screenfull
  display none

// 链接块
.link-block
  margin 0 -5px
  width 100%
  > .link-item
    margin 15px 7px 0
    padding 10px
    display inline-block
    width 190px
    height 100px
    text-align center
    background #f0f2f4
    cursor pointer
    text-decoration none !important
    border 1px solid transparent
    border-radius 4px
    box-sizing border-box
    overflow hidden
    &:hover
      border-color $accentColor
    p
      margin 0
      line-height inherit
      &.title
        padding-top 10px
        padding-bottom 5px
      &.intro
        font-size .8em
        color #666
        display -webkit-box
        -webkit-box-orient vertical
        -webkit-line-clamp 2
        overflow hidden
